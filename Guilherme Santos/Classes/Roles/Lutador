package Personagem.Roles.Lutador;

import Personagem.Atributo;
import Personagem.PassivasRole;
import Personagem.Roles.*;
import Personagem.Roles.Lutador.Subclasse.*;

public class Lutador extends Roles implements PassivasRole {
    private Berserker berserker;
    private Guerreiro guerreiro;
    private Monk monk;
    private Atributo atributo;

    public Lutador (Berserker berserker, Guerreiro guerreiro, Monk monk, Atributo atributo){
        super("");
        this.berserker = berserker;
        this.guerreiro = guerreiro;
        this.monk = monk;
        this.atributo = atributo;
    }

    public Lutador() {
        super("");
    }

    @Override
    public double habilidadePassivaRole(double valorAtual) {
        return valorAtual * 1.1;
    }

    @Override
    public void atributoPassivoRole() {
        atributo.setForca(atributo.getForca() + 10);
        atributo.setDefesa(atributo.getDefesa() + 5);
        atributo.setVida(atributo.getVida() + 30);
    }

    @Override
    public void descricaoHabilidadePassiva() {
        System.out.println("Ao se esquivar de um ataque, recebe 10% a mais de Vida e For√ßa.");
    }
}
