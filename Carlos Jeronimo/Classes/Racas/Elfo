package Personagem.Racas.Elfo;

import Personagem.Atributo.Atributo;
import Personagem.Racas.Raca;
import Personagem.Interfaces.PassivaRaca;

public class Elfo extends Raca implements PassivaRaca {
    private Atributo atributo;

    public Elfo(Atributo atributo) {
        this.atributo = atributo;
    }

    public Elfo() {
        super();
    }

    @Override
    public double habilidadePassivaRaca() {
        System.out.println("Esta raça concede + 10 ponto de destreza e 5 pontos de inteligencia");
        return (getAtributo().getDestreza() + 10) + (getAtributo().getInteligencia() + 5);
    }

    @Override
    public void descricaoPassivaRaca() {
        System.out.println("Concede sentidos aguçados(melhora a percepção) e resistencia a magia.");

    }
}
