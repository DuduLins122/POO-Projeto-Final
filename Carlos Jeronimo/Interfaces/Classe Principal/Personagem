package Personagem;

import Personagem.Roles.Roles;
import Personagem.Racas.Raca;

public abstract class Personagem {
    private String nome;
    private Roles roles;
    private Raca raca;
    private Aparencia aparencia;
    private Atributo atributo;


    public Personagem(Roles roles, Raca raca, Aparencia aparencia, Atributo atributo) {
        this.roles = roles;
        this.raca = raca;
        this.aparencia = aparencia;
        this.atributo = atributo;
    }

    public Personagem(String nome) {
        this.nome = nome;
    }

    public String getNome() {
        return nome;
    }

    public Roles getRole() {
        return roles;
    }

    public Raca getRaca() {
        return raca;
    }

    public Aparencia getAparencia() {
        return aparencia;
    }

    public Atributo getAtributo() {
        return atributo;
    }

}
