package Personagem.Roles.Tank.Subclasse;

import Personagem.Atributo.Atributo;
import Personagem.Racas.Raca;
import Personagem.Roles.Tank.Tank;
import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.io.Serializable;

public class Warrior extends Tank implements Serializable {
    private static final long serialVersionUID = 26L;

    public Warrior(String nome, Raca raca, Atributo atributo) {
        super(nome, raca, atributo);
    }

    public String lerLore() {
        StringBuilder lore = new StringBuilder();
        try (BufferedReader reader = new BufferedReader(new FileReader("C:\\Users\\ritac\\IdeaProjects\\Projeto FInal POO\\src\\Lores\\Warrior.txt"))) {
            String line;
            while ((line = reader.readLine()) != null) {
                lore.append(line).append("\n");
            }
        } catch (IOException e) {
            System.out.println("Erro ao ler a lore do personagem: " + e.getMessage());
        }
        return lore.toString();
    }
}
